<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_results_item_img"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_results_item_label"
        app:layout_constraintBottom_toBottomOf="@id/search_results_item_label"
        android:src="@drawable/search_icon_dark_grey" />

    <TextView
        android:id="@+id/search_results_item_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_results_item_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/item_recipe_label" />

</androidx.constraintlayout.widget.ConstraintLayout>